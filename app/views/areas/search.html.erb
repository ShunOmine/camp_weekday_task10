<% if flash.notice %>
  <div class="col-md-6 offset-md-3 mt-3">
    <div class="alert alert-success" role="alert">
      <%= flash.notice %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<% end %>
<% if @json["message"] %>
  <div class="col-md-6 offset-md-3 mt-3">
    <div class="alert alert-danger" role="alert">
      <%= flash.alert %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  </div>
<% else %>
  <small></small>
<% end %>
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3 mb-5">
      <% if @result.nil? %>
        <h1 class="text-center mt-5">エリア検索</h1>
        <%= form_with(method: :get, local: true) do |f| %>
          <%= f.label :zipcode, "郵便番号で検索" %>
          <%= f.number_field :zipcode, class: "form-control" %>
          <%= f.submit "検索", class: "btn btn-primary col-12 mt-3" %>
        <% end %>
      <% elsif @result %>
        <h1 class="text-center mt-5 mb-5">エリア登録</h1>
        <%= form_with(model: @area, local: true) do |f| %>
          <%= f.label :zipcode, "Zipcode" %>
          <%= f.number_field :zipcode, class: "form-control", value: @zipcode %>
          <%= f.label :prefcode, "Prefcode" %>
          <%= f.text_field :prefcode, class: "form-control", value: @prefcode %>
          <%= f.label :address1, "Address1" %>
          <%= f.text_field :address1, class: "form-control", value: @address1 %>
          <%= f.label :kana1, "Kana1" %>
          <%= f.text_field :kana1, class: "form-control", value: @kana1 %>
          <%= f.label :address2, "Address2" %>
          <%= f.text_field :address2, class: "form-control", value: @address2 %>
          <%= f.label :kana2, "Kana2" %>
          <%= f.text_field :kana2, class: "form-control", value: @kana2 %>
          <%= f.label :address3, "Address3" %>
          <%= f.text_field :address3, class: "form-control", value: @address3 %>
          <%= f.label :kana3, "Kana3" %>
          <%= f.text_field :kana3, class: "form-control", value: @kana3 %>
          <%= f.label :introduction, "Introduction" %>
          <%= f.text_area :introduction, class: "form-control", rows: 3 %>
          <%= f.submit "登録する", class: "btn btn-primary col-12 mt-3" %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
