<!DOCTYPE html>
<html>
  <head>
    <title>CampWeekdayTask10</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <%= link_to "Areas", root_path, class: "navbar-brand" %>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "AreaSearch", search_areas_path, class: "nav-link" %>
          </li>
        </ul>
      </div>
    </nav>
    <%= yield %>
    <script>
        $(document).ready(function () {
            //メッセージを4秒後にフェードアウトする
            $('.alert').fadeOut(4000);
        });
    </script>
  </body>
</html>
